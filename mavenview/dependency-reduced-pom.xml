    <jar-plugin.version>2.4</jar-plugin.version>
    <mockito.version>1.9.5</mockito.version>
    <hamcrest.version>1.3</hamcrest.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
